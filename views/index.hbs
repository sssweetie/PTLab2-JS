<!DOCTYPE html>
<html>
<head>
    <title>Добавление пользователя</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Интернет-магазин мебели</h1>
    <form action="purchase" method="POST">
        {{#each products}}
        <div>
            {{this.name}}
        </div>
        <div>
            {{this.count}}
        </div>
        <div>
            {{this.price}}
        </div>
            <input name="{{this.name}}" type="number" min="0" max="{{this.count}}" value="0"></input>
        {{/each}}
        <input type="submit" value="Отправить" />
    </form>
</body>
<html>